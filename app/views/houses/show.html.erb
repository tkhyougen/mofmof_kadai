<p id="notice"><%= notice %></p>

<h1>物件編集</h1>
<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @house.year %>円
</p>

<p>
  <strong>備考:</strong>
  <%= @house.remarks %>
</p>

<p>--------------------------------------- </p>

<% n=0 %>
<% @house.stations.each do |station| %>
  <h3><%= "最寄り駅#{n +=1}" %> </h3>
  <p>
    &nbsp;&nbsp;<strong>路線名:</strong>
    <%= station.line %>
  </p>

  <p>
    &nbsp;&nbsp;<strong>駅:</strong>
    <%= station.station %>
  </p>

  <p>
    &nbsp;&nbsp;<strong>徒歩分数:</strong>
    <%= station.minute %>
  </p>
<% end %>


<%= link_to '編集する', edit_house_path(@house) %> |
<%= link_to '戻る', houses_path %>
