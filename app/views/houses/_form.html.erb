<%= nested_form_for(@house) do |form| %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name, placeholder:"〇〇ハイツ" %>
  </div>

  <div class="field">
    <%= form.label :rent, "賃料" %>
    <%= form.number_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :address, "住所" %>
    <%= form.text_area :address, placeholder:"東京都XXXX" %>
  </div>

  <div class="field">
    <%= form.label :year, "築年数" %>
    <%= form.number_field :year, placeholder:"東京都XXXX" %>年
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

<span>-----------------------------------------</span>


  <%= form.fields_for :stations do |station_form| %>

    <div class="field">
        <%= station_form.label :line, "路線名" %>
        <%= station_form.text_field :line, placeholder:"○○線" %>線
    </div>

    <div class="field">
        <%= station_form.label :station, "駅名" %>
        <%= station_form.text_field :station, placeholder:"○○駅" %>駅
    </div>

    <div class="field">
        <%= station_form.label :minute, "徒歩分数" %>
        <%= station_form.number_field :minute, placeholder:1 %>分
    </div>
<span>-----------------------------------------</span>
      <%= station_form.link_to_remove "項目削除" %>
  <% end %>
